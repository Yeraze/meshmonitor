{
  "$schema": "https://schemas.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for MeshMonitor Desktop",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/node",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-open"
  ]
}
