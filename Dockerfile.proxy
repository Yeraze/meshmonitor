FROM node:20-alpine

# Install only netcat for healthcheck and port waiting
RUN apk add --no-cache netcat-openbsd

# Copy the startup wrapper script
COPY proxy-start.sh /usr/local/bin/proxy-start.sh
RUN chmod +x /usr/local/bin/proxy-start.sh

# Expose the WebSocket port
EXPOSE 8080

# Run the proxy using npx via wrapper script
ENTRYPOINT ["/usr/local/bin/proxy-start.sh"]
